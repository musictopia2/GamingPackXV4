@if (DataContext == null || SingleClock == null)
{
    return;
}
@{
    LinkCard();
}
@if (_currentCard == null)
{
    return;
}
@if (DataContext.ShowCenter)
{
    <div class="centerText">
        @SingleClock.NumberGuide
    </div>
}
<div>
    <FlexibleDeckRenderComponent D="SolitaireCard" DeckObject="_currentCard!">
        <DeckOfCardsImageBlazor R="SolitaireCard" CommandObject="DataContext.ClockCommand"
                                TargetHeight="@TargetHeight.HeightString()"
                                DeckObject="_currentCard"
                                CommandParameter="_currentCard" />
    </FlexibleDeckRenderComponent>

</div>
<div class="centerText">
    @SingleClock.LeftGuide
</div>