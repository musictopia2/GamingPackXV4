@if (MainPiles == null)
{
    return;
}
@{
    int x = 0;
    int y;
}
<CascadingValue Value="MainPiles">
    <GridContainer Columns="@GetColumns" Rows="65vh">
        @foreach (var pile in MainPiles.PileList)
        {
            x++;
            y = x + 1;
            <GridItem Column="y">
                <IndividualSolitairePileBlazor SinglePile="pile" />
                @if (x == PlaceAfter && ChildContent != null)
                {
                    @ChildContent
                }
            </GridItem>
        }
    </GridContainer>
</CascadingValue>