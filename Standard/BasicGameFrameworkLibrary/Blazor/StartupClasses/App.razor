@using BasicBlazorLibrary.Components.CssManagement
@using BasicBlazorLibrary.Layouts
@using Microsoft.AspNetCore.Components.Routing
@if (string.IsNullOrWhiteSpace(AppStyleName))
{
    <div>
        No app style name
    </div>
    return;
}
<CssSimpleSetup AppStyleName="@AppStyleName" CssFiles="@_files">
    <Router AppAssembly="@typeof(App).Assembly" AdditionalAssemblies="_additionalAssemblies">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(BlankLayout)" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(BlankLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CssSimpleSetup>