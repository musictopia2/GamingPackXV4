@inherits LayoutComponentBase
@using BasicBlazorLibrary.Components.Toasts
@using BasicBlazorLibrary.Layouts;
@using BasicBlazorLibrary.Components.MediaQueries.ParentClasses
<MediaQueryListComponent>
    <MainPage>
        <BlazoredToasts Timeout="3" />
            <StartLayout ExtraCssFiles="extras">
                <div class="beginning">
                    @Body
                </div>
            </StartLayout>
    </MainPage>
</MediaQueryListComponent>

@code{
    private BasicList<string> extras = new();
    protected override void OnInitialized()
    {
        extras.Add("_content/BasicGameFrameworkLibrary/basicgaming.css");
        base.OnInitialized();
    }
}