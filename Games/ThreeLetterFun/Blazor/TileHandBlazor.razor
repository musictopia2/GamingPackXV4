@if (Board == null || Board.HandList.Count != 2)
{
    return;
}
<StackLayout>
    @foreach (var tile in Board.HandList)
    {
        <StackItem>
            <TileCardBlazor @key="tile" 
                            CommandObject="Board.ObjectSingleClickCommand"
                            DeckObject="tile"
                            TargetHeight="@TargetHeight"
                            CommandParameter="tile" />
        </StackItem>
    }
</StackLayout>