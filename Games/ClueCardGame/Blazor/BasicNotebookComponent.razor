@using BasicGameFrameworkLibrary.Blazor.GameGraphics.Base
@{
    var list1 = GetCardsInCategory(EnumCardType.IsCharacter);
}
<StackLayout>
    @foreach (var item in list1)
    {
        <StackItem>
            <FlexibleDeckRenderComponent DeckObject=item UseKey="true">
                <CardGraphicsBlazor CommandParameter="item"
                                    TargetHeight="@RealHeight"
                                    CommandObject="AddCommand"
                                    DeckObject="item" />
            </FlexibleDeckRenderComponent>

        </StackItem>
    }
</StackLayout>
