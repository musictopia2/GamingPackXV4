<BasicMultiplePilesBlazor D="DutchBlitzCardInformation" Inline="@Inline"
                          AnimationTag="@AnimationTag"
                          Piles="@Piles">
    <CanvasTemplate Context="Card">
        <CardGraphicsBlazor TargetHeight="@RealHeight" DeckObject="Card" />
    </CanvasTemplate>
    <MainTemplate Context="Pile">
        <PrivateBasicIndividualPileBlazor Context="Card" D="DutchBlitzCardInformation" IndividualPile="Pile">
            <CardGraphicsBlazor TargetHeight="@RealHeight"
                                ClickBlank="true"
                                DeckObject="Card"
                                CommandParameter="Pile"
                                CommandObject="Piles!.PileCommand" />
        </PrivateBasicIndividualPileBlazor>
    </MainTemplate>
</BasicMultiplePilesBlazor>