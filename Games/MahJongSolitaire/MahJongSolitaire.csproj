<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <Version>8.0.4</Version>
  </PropertyGroup>
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="CommandsGenerator" Version="1.0.6" PrivateAssets="all" />
    <PackageReference Include="GamePackageDIGenerator" Version="1.0.4" PrivateAssets="all" />
    <PackageReference Include="GamePackageSerializeGenerator" Version="1.0.4" PrivateAssets="all" />
    <PackageReference Include="MahjongTilesBlazor" Version="10.0.7" />
    <PackageReference Include="MappingCloningExtensions" Version="2.0.8" PrivateAssets="all" />
  </ItemGroup>
  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
    <ProjectReference Include="..\..\Standard\BasicGameFrameworkLibrary\BasicGameFrameworkLibrary.csproj" />
  </ItemGroup>
  <ItemGroup Condition="'$(Configuration)' == 'Release'">
    <PackageReference Include="BasicGameFrameworkLibrary" Version="10.0.13" />
  </ItemGroup>
  <Target Name="RunImageEmbedder" BeforeTargets="BeforeBuild">
    <Exec Command="SvgPngEmbedTool $(ProjectName) $(ProjectDir) $(ProjectFileName)" ContinueOnError="true" />
  </Target>
</Project>