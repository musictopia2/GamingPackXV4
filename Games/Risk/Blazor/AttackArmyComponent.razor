@if (HowManyArmies > 3)
{
    <div>You cannot have more than 3 armies</div>
    return;
}
@if (HowManyArmies < 0)
{
    <div>You cannot have less than 0 armies</div>
    return;
}
<ArmyBoard Text="Attack">
    <BorderedSpace SpaceLocation="new()" SpaceSize="new(33, 33)" BorderColor="@cc.Aqua" BorderWidth="1">
        @if (HowManyArmies > 0)
        {
            <BasePieceGraphics LongestSize="33">
                <ArmyColorComponent MainColor="@Color" />
            </BasePieceGraphics>
        }
    </BorderedSpace>
    <BorderedSpace SpaceLocation="new(33, 0)" SpaceSize="new(33, 33)" BorderColor="@cc.Aqua" BorderWidth="1">
        @if (HowManyArmies > 1)
        {
            <BasePieceGraphics LongestSize="33">
                <ArmyColorComponent MainColor="@Color" />
            </BasePieceGraphics>
        }
    </BorderedSpace>
    <BorderedSpace SpaceLocation="new(66, 0)" SpaceSize="new(33, 33)" BorderColor="@cc.Aqua" BorderWidth="1">
        @if (HowManyArmies == 3)
        {
            <BasePieceGraphics LongestSize="33">
                <ArmyColorComponent MainColor="@Color" />
            </BasePieceGraphics>
        }
    </BorderedSpace>
</ArmyBoard>
