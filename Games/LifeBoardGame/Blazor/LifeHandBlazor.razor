@if (Hand!.HandList.All(x => x.IsUnknown == false))
{
    <BaseHandBlazor D="LifeBaseCard" Hand="Hand"
                    HandType="EnumHandList.Vertical"
                    TargetImageSize="@RealHeight"
                    Context="DeckObject">
        <LifeCardBlazor CommandParameter="DeckObject" DeckObject="DeckObject" CommandObject="Hand!.ObjectSingleClickCommand" />
    </BaseHandBlazor>
    return;
}
<BaseHandBlazor D="LifeBaseCard" Hand="Hand"
                HandType="EnumHandList.Vertical"
                TargetContainerSize="@TargetContainerSize"
                TargetImageSize="@RealHeight"
                Context="DeckObject"
                Divider="1.3">
    <LifeCardBlazor CommandParameter="DeckObject" DeckObject="DeckObject" CommandObject="Hand!.ObjectSingleClickCommand" />
</BaseHandBlazor>