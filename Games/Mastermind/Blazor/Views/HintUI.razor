@using gg1 = Global;
@using cc1 = CommonBasicLibraries.BasicDataSettingsAndProcesses.SColorString;
@if (YourGuess == null)
{
    return;
}
@for (int i = 0; i < YourGuess.HowManyBlacks; i++)
{
    <BasePieceGraphics TargetWidth="@gg1.BeadHeight">
        <CirclePiece NeedsWhiteBorders="true" MainColor="@cc1.Black" />
    </BasePieceGraphics>
}
@for (int i = 0; i < YourGuess.HowManyAquas; i++)
{
    <BasePieceGraphics TargetWidth="@gg1.BeadHeight">
        <CirclePiece NeedsWhiteBorders="true" MainColor="@cc1.Aqua" />
    </BasePieceGraphics>
}
@{
    int leftovers = LeftOvers;
}
@for (int i = 0; i < LeftOvers; i++)
{
    <BasePieceGraphics TargetWidth="@gg1.BeadHeight">
        <CirclePiece NeedsWhiteBorders="true" MainColor="@cc1.Transparent" />
    </BasePieceGraphics>
}