@{
    var list = GetSpaces();
}
@foreach (var item in list)
{
    var dice = GetDice(item.Own);
    <SpaceBlazor OnClicked="PossibleClick" Column="item.Column" Row="item.Row">
        @if (item.Own.Group != Group)
        {
            <ColorSpaceComponent Color="@Group.GetColor()"
                TargetImageHeight="@TargetHeight"
            >
                <ValueSpaceComponent TargetHeight="@TargetHeight" Value="@Group.GetMonopolyValue()" />
            </ColorSpaceComponent>
            return;
        }
        <BasicDiceBlazor TargetHeight="@TargetHeight" Dice="dice" />
    </SpaceBlazor>
}