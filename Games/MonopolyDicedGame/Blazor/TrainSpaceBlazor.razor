@{
    var list = GetSpaces();
}
@foreach (var item in list)
{
    var dice = GetDice(item.Own);
    <SpaceBlazor OnClicked="PossibleClick" MarginTop=4 Column="item.Column" Row="item.Row">
        @if (item.Own.UsedOn == EnumBasicType.None)
        {
            <ColorSpaceComponent Color="@Color"
                                 TargetImageHeight="@TargetHeight">
                                 <BasicDiceBlazor TargetHeight="@TargetHeight" Dice="dice" OnBoardNotOwned=true />
            </ColorSpaceComponent>
            return;
        }
        <BasicDiceBlazor TargetHeight="@TargetHeight" Dice="dice" />
    </SpaceBlazor>
}