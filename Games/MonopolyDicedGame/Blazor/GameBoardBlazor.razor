        </ColorSpaceComponent> *@
        <BasicDiceBlazor Dice="dice" TargetHeight="@ImageHeight" />

    </SpaceBlazor>
    <SpaceBlazor MarginTop="8" Column="5" Row="3">
        @{
            var dice = GetElectricDice();
        }
        <ColorSpaceComponent Border="@GetUtilityBorder" TargetImageHeight="@ImageHeight" Color="@GetUtilityColor">
            <BasicDiceBlazor Dice="dice" TargetHeight="@ImageHeight" OnBoardNotOwned=true />
        </ColorSpaceComponent>
        @* <BasicDiceBlazor Dice="dice" TargetHeight="@ImageHeight" /> *@
    </SpaceBlazor>

    <MiscSpaceComponent TargetImageHeight="@ImageHeight" MiscList="MiscList" />

    @* <SpaceBlazor MarginTop="5" MarginLeft=4 Row="5" Column="3">
        <ColorSpaceComponent Color="@GetActionColor" TargetImageHeight="@ImageHeight">

        </ColorSpaceComponent>
    </SpaceBlazor>
    <SpaceBlazor MarginTop="5" MarginLeft="4" Row="5" Column="4">
        <ColorSpaceComponent Color="@GetActionColor" TargetImageHeight="@ImageHeight">

        </ColorSpaceComponent>
    </SpaceBlazor>
    <SpaceBlazor MarginTop="5" MarginLeft="4" Row="5" Column="5">
        <ColorSpaceComponent Color="@GetActionColor" TargetImageHeight="@ImageHeight">

        </ColorSpaceComponent>
    </SpaceBlazor> *@

