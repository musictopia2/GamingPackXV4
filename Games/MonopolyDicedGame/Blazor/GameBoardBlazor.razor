        <PropertyBoardBlazor Owned=1 Group="@item" TargetHeight="@ImageHeight" />
    </SimpleRepeater>
    <TrainSpaceBlazor Owned="2" TargetHeight="@ImageHeight" />

    <SpaceBlazor MarginTop="8" Column="4" Row="3">
        @{
            var dice = GetWaterDice();
        }
        @* <ColorSpaceComponent Border="@GetUtilityBorder" TargetImageHeight="@ImageHeight" Color="@GetUtilityColor">
