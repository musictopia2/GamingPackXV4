<CanvasLayout 
ViewPort="@_size"
    ContainerHeight="@TargetHeight"
    ContainerWidth="@TargetHeight"
              BackgroundColor="#6ecacc">
    <PoliceBoardComponent PoliceUsed="@NumberOfCops" TargetImageHeight="@ImageHeight" />
    <SimpleRepeater HowMany=8 Context="item">
            <PropertyBoardBlazor IsEnabled=IsEnabled OnClicked="() => PossiblePropertyClick(item)" OwnList=OwnList Group="@item" TargetHeight="@ImageHeight" />
    </SimpleRepeater>
    <TrainSpaceBlazor IsEnabled=IsEnabled OnClicked=PossibleTrainClick OwnList="@OwnList" TargetHeight="@ImageHeight" />
    <UtilitySpaceComponent IsEnabled=IsEnabled TargetImageHeight="@ImageHeight" OwnList="@OwnList" UtilityClicked="PossibleUtilityClick" />
    <MiscSpaceComponent TargetImageHeight="@ImageHeight" MiscList="MiscList" />
    <HouseSpaceComponent ImageHeight="@ImageHeight" HasHotel=HasHotel HousesOwned="HousesOwned" />
    <HouseAnimationComponent HouseDice="HouseDice" ImageHeight="@ImageHeight" />
    
</CanvasLayout>