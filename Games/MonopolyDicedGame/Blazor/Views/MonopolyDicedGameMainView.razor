@inherits BasicGameView<MonopolyDicedGameMainViewModel>
<StackLayout>
    <StackItem>
        <GameBoardBlazor NumberOfCops="_container!.SaveRoot.NumberOfCops"
                         TargetHeight="75vh"
                         HouseDice="_house"
                         HousesOwned="_container.SaveRoot.NumberOfHouses"
                         HasHotel=_container.SaveRoot.HasHotel
                         MiscList="_others"
                         OwnList="_container.SaveRoot.Owns"
                         UtilityClicked="SampleClickUtility"
                         TrainClicked="SampleClickTrain"
                         PropertyClicked="SamplePropertyClicked"
                         IsEnabled = "true"
                         ImageHeight="9vh" />
    </StackItem>
    <StackItem>
        <LabelGridComponent DataContext="DataContext!.VMData" Labels="_labels" />
        @* @if (CanTestRoll())
        {
            <GameButtonComponent Display="Test Roll Misc" CustomCallBack="TestRollMiscAsync" />
