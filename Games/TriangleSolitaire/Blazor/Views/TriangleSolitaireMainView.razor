@inherits BasicGameView<TriangleSolitaireMainViewModel>
@if (DataContext!.DeckPile != null && DataContext.DeckPile.TextToAppear != "")
{
    <StackLayout>
        <StackItem>
            <DeckOfCardsDrawPileBlazor R="SolitaireCard" DeckPile="DataContext.DeckPile" />
        </StackItem>
        <StackItem>
            <DeckOfCardsSingleMiscPileBlazor R="SolitaireCard" SinglePile="DataContext.Pile1" />
        </StackItem>
        <StackItem>
            <TriangleBlazor DataContext="DataContext.Triangle1" />
        </StackItem>
    </StackLayout>
}