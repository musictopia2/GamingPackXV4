@inherits BasicGameView<UnoMainViewModel>
@if (_vmData == null || DataContext == null || _gameContainer == null)
{
    return;
}
<StackLayout>
    <StackItem>
        <DrawPileBlazor DeckPile="_vmData.Deck1" />
    </StackItem>
    <StackItem>
        <SingleMiscPileBlazor SinglePile="_vmData.Pile1" />
    </StackItem>
    <StackItem>
        <GameButtonComponent CommandObject="EndCommand"
                             Display="End Turn" />
    </StackItem>
    <StackItem>
        <ParentControl VM="SayUnoViewModel">
            <SayUnoView />
        </ParentControl>
    </StackItem>
</StackLayout>
<div>
    <HandBlazor Hand="_vmData.PlayerHand1" />
</div>
<div>
    <LabelGridComponent DataContext="_vmData" Labels="_labels" />
</div>
<div>
    <ScoreBoardBlazor P="UnoPlayerItem"
                      Columns="_scores"
                      Players="_gameContainer.SaveRoot.PlayerList" />
</div>