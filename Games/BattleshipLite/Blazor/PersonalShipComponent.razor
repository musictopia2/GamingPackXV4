@{
    var ships = DataContext!.YourPlacedShips();
}
<svg height="@TargetHeight" width="100%" viewBox="0 0 200 310">
    @{
        int y = 1;
    }
    
    @foreach(var ship in ships)
    {
        string location = ship.ShipLocation();
        <rect x="0" fill="@PieceColor(ship)" y="@y" width="200" height="60" style="stroke: black; stroke-width: 4px" />
        <svg x="0" y="@y" width="200" height="60">
            <text x="50%" y="55%" font-size="60px" text-anchor="middle" dominant-baseline="middle" style="width: 100%; height: 100%">
                @location
            </text>
        </svg>
        y += 62;
    }
</svg>