@inherits BasicGameView<ItalianDominosMainViewModel>
<BaseBoneyardPileBlazor D="SimpleDominoInfo" BoneyardPile="DataContext!.BoneYard" LI="DominosBasicShuffler<SimpleDominoInfo>">
    <BasicDominoBlazor D="SimpleDominoInfo" DeckObject="GetDomino" TargetHeight="10vh" />
</BaseBoneyardPileBlazor>
<div>
    <BaseHandBlazor Hand="DataContext.PlayerHand" TargetImageSize="@RealHeight" TargetContainerSize="95vw" Divider="1.1" Context="Domino" D="SimpleDominoInfo">
        <BasicDominoBlazor D="SimpleDominoInfo"

             DeckObject="Domino" 
             TargetHeight="@RealHeight"
             CommandObject="DataContext.PlayerHand.ObjectSingleClickCommand" CommandParameter="Domino" />
    </BaseHandBlazor>
</div>
<StackLayout>
    <StackItem>
        <GameButtonComponent CommandObject="PlayCommand" Display="Play" />
    </StackItem>
    <StackItem>
        <LabelGridComponent DataContext="DataContext.VMData" Labels="_labels" />
    </StackItem>
    <StackItem>
        <ScoreBoardBlazor UseAbbreviationForTrueFalse="false" P="ItalianDominosPlayerItem" Players="DataContext.GetPlayerList" Columns="_scores" />
    </StackItem>
</StackLayout>