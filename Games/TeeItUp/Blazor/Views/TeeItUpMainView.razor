@inherits BasicGameView<TeeItUpMainViewModel>
@if (_vmData == null || DataContext == null || _gameContainer == null)
{
    return;
}
<StackLayout>
    <StackItem>
        <DrawPileBlazor DeckPile="_vmData.Deck1" />
    </StackItem>
    <StackItem>
        <SingleMiscPileBlazor SinglePile="_vmData.Pile1" />
    </StackItem>
    <StackItem>
        <SingleMiscPileBlazor SinglePile="_vmData.OtherPile" PileAnimationTag="otherpile" />
    </StackItem>
    <StackItem>
        <ScoreBoardBlazor P="TeeItUpPlayerItem"
                          Columns="_scores"
                          Players="_gameContainer.SaveRoot.PlayerList" />
    </StackItem>
    <StackItem Length="1fr">
        <LabelGridComponent DataContext="_vmData" Labels="_labels" />
    </StackItem>
</StackLayout>
<StackLayout>
    @foreach (var player in _players)
    {
        <StackItem>
            <CardBoardBlazor DataContext="player.PlayerBoard" />
        </StackItem>
    }
</StackLayout>